{
    "_version": "1.15.0",
    "sap.app": {
        "id": "workzone.geburtstage",
        "type": "card",
        "title": "Geburtstage der Woche ",
        "subTitle": "",
        "applicationVersion": {
            "version": "0.0.8"
        }
    },
    "sap.ui": {
        "technology": "UI5",
        "deviceTypes": {
            "desktop": true,
            "phone": true,
            "tablet": true
        },
        "icons": {
            "icon": "sap-icon://table-view"
        }
    },
    "sap.card": {
        "type": "Table",
        "configuration": {
            "destinations": {
                "S4HANA": {
                    "name": "T04_504"
                }
            }
        },
        "data": {
            "request": {
                "url": "{{destinations.S4HANA}}/sap/opu/odata/NOVOBC/A2_01_GW_GEB_SRV/GebSet?$format=json",
                "parameters": {
                    "$top": "1",
                    "$orderby": "Gbtag"
                },
                "withCredentials": true
            },
            "path": "/d/results"
        },
        "designtime": "dt/configuration",
        "header": {
            "title": "Geburtstage der Woche"
        },
        "content": {
            "row": {
                "columns": [
                    {
                        "title": "Nachname",
                        "value": "{Nachn}"
                    },
                    {
                        "title": "Vorname",
                        "value": "{Vorn}"
                    },
                    {
                        "title": "Geburtstag",
                        "value": "{= format.dateTime(Date.now(), {pattern: 'E d. MMMM'}) }"
                    }
                ]
            }
        }
    },
    "sap.platform.mobilecards": {
        "compatible": true
    }
}